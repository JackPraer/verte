{
  "name": "verte",
  "version": "0.0.3",
  "description": "Vue Color Picker",
  "main": "dist/verte.js",
  "style": "dist/verte.css",
  "module": "dist/verte.esm.js",
  "scripts": {
    "lint": "eslint ./src --fix",
    "build": "MODE=production node scripts/build",
    "dev": "MODE=dev node scripts/watch",
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "docs:deploy": "scripts/deploy",
    "test": "jest",
    "cover": "jest --coverage"
  },
  "files": [
    "dist/*.js",
    "dist/*.css"
  ],
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.51",
    "@babel/preset-env": "^7.0.0-beta.51",
    "@vue/test-utils": "^1.0.0-beta.18",
    "babel-core": "^7.0.0-0",
    "babel-jest": "^23.0.1",
    "browser-sync": "^2.23.6",
    "chalk": "^2.3.2",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jest": "^21.17.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.0.1",
    "eslint-plugin-vue": "^4.5.0",
    "fs": "0.0.1-security",
    "jest": "^23.1.0",
    "jest-canvas-mock": "^1.0.3",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.9.0",
    "pug": "^2.0.3",
    "pug-loader": "^2.4.0",
    "pug-plain-loader": "^1.0.0",
    "rollup": "^0.60.7",
    "rollup-plugin-buble": "^0.19.2",
    "rollup-plugin-css-only": "^0.4.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^4.0.0",
    "rollup-plugin-vue": "^4.2.0",
    "sass-loader": "^7.0.3",
    "stylus": "^0.54.5",
    "vue-jest": "^2.6.0",
    "vue-template-compiler": "^2.5.16",
    "vuepress": "^0.10.1"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "color-fns": "^0.0.6"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/test/setupTests.js",
      "jest-canvas-mock"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/**.{js,vue}",
      "!**/node_modules/**"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "transform": {
      ".*\\.(vue)$": "<rootDir>/node_modules/vue-jest",
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest"
    }
  }
}
